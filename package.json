{
  "name": "tep-cms",
  "version": "1.0.0",
  "description": "The Easy Publisher: the perfect CMS for your website!",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"nodemon\" \"npm run watch-css\"",
    "watch-css": "sass --watch styles/styles.scss:public/css/styles.css --style=expanded",
    "prod": "npm run build && sass styles/styles.scss public/css/styles.css --no-source-map --style=compressed"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "chokidar": "^4.0.3",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "lunr": "^2.3.9",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "serve-favicon": "^2.5.1",
    "sharp": "^0.34.3",
    "uuid": "^11.1.0"
  },
  "author": "JirzyKerklaan",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/chokidar": "^1.7.5",
    "@types/concurrently": "^6.4.0",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/fs-extra": "^11.0.4",
    "@types/lunr": "^2.3.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/nodemon": "^1.19.6",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "sass": "^1.97.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
